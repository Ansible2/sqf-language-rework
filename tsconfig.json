{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2022",
        "lib": ["es2022"],
        "outDir": ".out",
        "rootDir": ".",
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "strictBindCallApply": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
		"allowJs": true
    },
    "include": ["extension", "configuration/grammars/syntaxes"],
    "exclude": [".vscode-test", "node_modules", "build-process", "scripts"]
}
