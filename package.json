{
    "name": "sqf-language-rework",
    "displayName": "SQF Language Rework",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.70.0"
    },
    "main": "extension/client/src/extension",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "lint": "eslint ./extension/client/src ./extension/server/src --ext .ts,.tsx",
        "postinstall": "cd ./extension/client && npm install && cd ../server && npm install && cd ..",
        "ts-node": "ts-node",
		"parse:biki": "ts-node ./Parsers/Parse.ts",
        "build": "ts-node ./build-process/build && npm run compile && npm run install:prod",
        "build:nocomp": "ts-node ./build-process/build",
        "install:prod": "cd .out && npm ci --production"
    },
    "devDependencies": {
        "@types/fs-extra": "^9.0.13",
        "@types/jsonfile": "^6.1.0",
        "@types/mocha": "^9.1.0",
        "@types/node": "^16.11.47",
        "@typescript-eslint/eslint-plugin": "^5.30.0",
        "@typescript-eslint/parser": "^5.30.0",
        "eslint": "^8.13.0",
        "fast-xml-parser": "^4.0.10",
        "fs-extra": "^10.1.0",
        "json2md": "^1.13.0",
        "jsonfile": "^6.1.0",
        "mocha": "^9.2.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.7.2",
        "vscode-languageserver": "^8.0.2",
        "vscode-textmate": "^7.0.1"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Themes",
        "Linters",
        "Debuggers"
    ],
    "activationEvents": [
        "onLanguage:sqf",
        "onLanguage:ext"
    ],
    "contributes": {
        "languages": [
            {
                "id": "sqf",
                "aliases": [
                    "SQF",
                    "sqf",
                    "Status Quo Function"
                ],
                "extensions": [
                    ".sqf",
                    ".sqm"
                ],
                "configuration": "./configuration/language-configs/sqf.configuration.json"
            },
            {
                "id": "ext",
                "aliases": [
                    "Arma header file"
                ],
                "extensions": [
                    ".ext",
                    ".hpp"
                ],
                "configuration": "./configuration/language-configs/ext.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "sqf",
                "scopeName": "source.sqf",
                "path": "./configuration/grammars/sqf.grammar.json"
            },
            {
                "language": "ext",
                "scopeName": "source.ext",
                "path": "./configuration/grammars/ext.grammar.json"
            }
        ],
        "commands": [
            {
                "command": "sqf.browseCommandDocs",
                "title": "SQF: Open Command Documentation",
                "category": "Documentation"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "SQF Language",
            "properties": {
                "sqf.enableOFP": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable commands introduced with Operation Flashpoint"
                },
                "sqf.enableTOH": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable commands introduced with Take on Helicopter"
                },
                "sqf.enableARMA": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable commands introduced with ArmA (1)"
                },
                "sqf.enableARMA2": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable commands introduced with ArmA 2"
                },
                "sqf.enableARMA3": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable commands introduced with ArmA 3"
                },
                "sqf.enableCBA": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable CBA (Community Based Addons) library"
                },
                "sqf.enableACE3": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable ACE3 library"
                },
                "sqf.maxNumberOfProblems": {
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                }
            }
        },
        "configurationDefaults": {
            "[sqf]": {
                "editor.quickSuggestions": {
                    "other": true,
                    "comments": true,
                    "strings": true
                },
                "editor.tabSize": 4,
                "editor.insertSpaces": false,
                "editor.detectIndentation": true,
                "editor.trimAutoWhitespace": true,
                "editor.autoClosingBrackets": "always"
            },
            "[ext]": {
                "editor.quickSuggestions": {
                    "other": true,
                    "comments": true,
                    "strings": true
                },
                "editor.tabSize": 4,
                "editor.insertSpaces": false,
                "editor.detectIndentation": true,
                "editor.trimAutoWhitespace": true,
                "editor.autoClosingBrackets": "always"
            }
        }
    }
}
